generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  githubId  String    @unique
  name      String?
  avatarUrl String?
  token     String?
  favorites Favorite[]
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  repoId    String
  repoName  String
  repoUrl   String
  user      User     @relation(fields: [userId], references: [id])
}